<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClaseS3.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Semana 3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtUser" Placeholder="Usuario"/>
        <Entry x:Name="txtContrasena" Placeholder="Password" IsPassword="True"/>
        
        <Button x:Name="buttonPaginados" Grid.Row="11" Grid.Column="0" Text="SiguientePagina" Clicked="buttonPaginados_Clicked"></Button>
        
                   
       
    </StackLayout>

</ContentPage>
